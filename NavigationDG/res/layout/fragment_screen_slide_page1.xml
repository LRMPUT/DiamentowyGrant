<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true" >

    <!-- Dummy content. -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
   

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gathering WiFi map"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editTextWiFiPosX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" >
            </EditText>

            <EditText
                android:id="@+id/editTextWiFiPosY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editTextWiFiPosZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
            
            <EditText
                android:id="@+id/editTextMapName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            
             <EditText
                android:id="@+id/editTextMapPosID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

           

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.00"
            android:orientation="vertical" >


            

            <Button
                android:id="@+id/buttonSideView3"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:text="Nothing" />
          
            <Button
                android:id="@+id/buttonSideView6"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:text="Nothing" /> 
                
            <Button
                android:id="@+id/buttonSaveMapPoint"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonSaveVPR"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Nothing" />
             <Button
                android:id="@+id/buttonRecordAll"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Nothing" />
             
             <Button
                android:id="@+id/buttonTakePicture"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_weight="0.14"
                android:text="Nothing" />
            <Button
                android:id="@+id/buttonMainView3"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_weight="0.14"
                android:text="Nothing" />
                
                

        </LinearLayout>
        
       

    </LinearLayout>
    
    	<Button
                android:id="@+id/buttonStartLocalization"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="Nothing" />
    
                <Switch
        android:id="@+id/switchBarometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barometer" />
                
                <Switch
        android:id="@+id/switchInertialSensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inertial sensors" />
                
                <Switch
        android:id="@+id/switchStepometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stepometer" />
                
                 <Switch
        android:id="@+id/switchWiFi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi" />
                
     </LinearLayout>

</ScrollView>