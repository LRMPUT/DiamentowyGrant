<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true" >

    <!-- Dummy content. -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.00"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonSideView1"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonSideView2"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonSideView3"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonSideView4"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonSideView5"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Nothing" />
            
            <Button
                android:id="@+id/buttonSideView6"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Nothing" />
            
            <Button
                android:id="@+id/buttonSideView7"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Nothing" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gathering WiFi map"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editTextWiFiPosX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" >
            </EditText>

            <EditText
                android:id="@+id/editTextWiFiPosY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editTextWiFiPosZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
            
            <EditText
                android:id="@+id/editTextMapName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/buttonSaveMapPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonSaveVPR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonMainView1"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.14"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonMainView2"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.14"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonMainView3"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.14"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonMainView4"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.14"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonMainView5"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.21"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonMainView6"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.21"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonMainView7"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.21"
                android:text="Nothing" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>