<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Dummy content. -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewStepometer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Found freq: " />

            <TextView
                android:id="@+id/textViewStepometer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step counter: " />

            <TextView
                android:id="@+id/textViewStepometer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: " />

            <Button
                android:id="@+id/buttonSideView1"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Nothing" />

            <TextView
                android:id="@+id/textViewBarometer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Floor: " />

            <TextView
                android:id="@+id/textViewBarometer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height: " />

            <Button
                android:id="@+id/buttonSideView2"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonSideView3"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonSideView4"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Nothing" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonMainView1"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.14"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonMainView2"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.14"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonMainView3"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.14"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonMainView4"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.14"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonMainView5"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.21"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonMainView6"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.21"
                android:text="Nothing" />

            <Button
                android:id="@+id/buttonMainView7"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="0.21"
                android:text="Nothing" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>