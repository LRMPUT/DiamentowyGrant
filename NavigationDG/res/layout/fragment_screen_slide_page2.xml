<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.79"
        android:orientation="vertical" >

        <SurfaceView
            android:id="@+id/SurfaceView01"
            android:layout_width="306dp"
            android:layout_height="163dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.79" >

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewOrient1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.79"
                    android:text="Roll (X):" />

                <TextView
                    android:id="@+id/textViewOrient2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.79"
                    android:text="Pitch (Y):" />

                <TextView
                    android:id="@+id/textViewOrient3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.79"
                    android:text="Yaw (Z):" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewWiFi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of found networks: " />

                <TextView
                    android:id="@+id/textViewWiFi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strongest WiFi: " />

                <TextView
                    android:id="@+id/textViewWiFi3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recognized place id: " />

                <TextView
                    android:id="@+id/textViewMagnetic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recognized mag place id: " />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>