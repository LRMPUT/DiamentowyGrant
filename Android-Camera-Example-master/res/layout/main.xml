<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="640px"
            android:layout_height="480px" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >"
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="2px"
			    android:layout_gravity="center_vertical"
			    android:background="#ff0000" 
			    android:layout_weight=".80" />

            <LinearLayout
                android:layout_width="257dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/buttonClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click" />

                <Button
                    android:id="@+id/buttonClick2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calibration" />

                <Button
                    android:id="@+id/buttonConvert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Convert YUV2RGB" />

                <Button
                    android:id="@+id/buttonWiFi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi start scanning" />

                <Button
                    android:id="@+id/buttonSingleWiFi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi single scan" />

                <Button
                    android:id="@+id/buttonInertialWiFi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi + Inertial" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>